@model ThePerfumeShop.Models.DataView.ThemSanPham
@{
    ViewData["Title"] = "Thêm sản phẩm";
}

<div class="card">
    <div class="card-header"><strong>Thêm sản phẩm</strong></div>
    <div class="card-body card-block">
        <form action="/sanpham/create" method="post" asp-antiforgery="true">
            <div class="form-group">
                <label for="TenSp" class=" form-control-label">Tên sản phẩm</label>
                <input type="text" name="TenSp" class="form-control">
                <span asp-validation-for="TenSp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Gia" class=" form-control-label">Số điện thoại</label>
                <input type="text" name="Gia" class="form-control">
                <span asp-validation-for="Gia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Chitiet" class=" form-control-label">Địa chỉ</label>
                <input type="text" name="Chitiet" class="form-control">
            </div>
            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <select asp-for="MaBr" class="form-control"
                                asp-items="@ViewBag.Brand">
                            <option>--Vui lòng chọn hãng sẳn phẩm--</option>
                        </select>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <select asp-for="MaNcc" class="form-control"
                                asp-items="@ViewBag.Ncc">
                            <option>--Vui lòng chọn nhà cung cấp sản phẩm--</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <a href="/sanpham" class="btn btn-outline-primary mt-4"><i class="fa fa-arrow-left"></i> &nbsp; Trở về</a>
                <input type="submit" name="submit" class="btn btn-info mt-4" value="Thêm" />
            </div>
        </form>
    </div>
</div>