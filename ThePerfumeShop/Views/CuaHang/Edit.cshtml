@model IEnumerable<ThePerfumeShop.Models.DataView.CapNhatCuaHang>
@{
    ViewData["Title"] = "Thêm cửa hàng";
}

<div class="card">
    <div class="card-header"><strong>Cập nhật thông tin cửa hàng</strong></div>
    <div class="card-body card-block">
        <form action="/cuahang/edit/@Model.FirstOrDefault().MaCh" method="post" asp-antiforgery="true">
            <input type="hidden" name="MaCh" class="form-control" value="@Model.FirstOrDefault().MaCh">
            <div class="form-group">
                <label for="TenCh" class=" form-control-label">Tên cửa hàng</label>
                <input type="text" name="TenCh" class="form-control" value="@Model.FirstOrDefault().TenCh">
                <span asp-validation-for="@Model.FirstOrDefault().TenCh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Sdt" class=" form-control-label">Số điện thoại</label>
                <input type="text" name="Sdt" class="form-control" value="@Model.FirstOrDefault().Sdt">
                <span asp-validation-for="@Model.FirstOrDefault().Sdt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Diachi" class="form-control-label" >Địa chỉ</label>
                <input type="text" name="Diachi" class="form-control" value="@Model.FirstOrDefault().Diachi">
            </div>
            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <select asp-for="@Model.FirstOrDefault().MaQl" class="form-control"
                                asp-items="@ViewBag.QuanLy">
                            <option>Please select one</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <a href="/cuahang" class="btn btn-outline-primary mt-4"><i class="fa fa-arrow-left"></i> &nbsp; Trở về</a>
                <input type="submit" name="submit" class="btn btn-info mt-4" value="Cập nhật" />
            </div>
        </form>
    </div>
</div>