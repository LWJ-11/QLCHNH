@model List<ThePerfumeShop.Models.DataView.DanhSachNhanVien>

@{
    ViewData["Title"] = "Cửa hàng " + Model.FirstOrDefault().TenCh;
}
<div class="card">
    <div class="card-header">
        <strong class="card-title">Cửa hàng @Model.FirstOrDefault().TenCh</strong>
        <a type="button" href="/NhanVien/Create/@Model.FirstOrDefault().MaCh" class="card-title btn btn-info float-right">Thêm nhân viên</a>
    </div>
    <div class="card-body">
        @if (Model != null)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Họ tên</th>
                        <th>Ngày Sinh</th>
                        <th>Giới tính</th>
                        <th>Số điện thoại</th>
                        <th>Địa chỉ</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MaNv</td>
                            <td>@item.TenNv</td>
                            <td>@String.Format("{0:MM/dd/yyyy}",item.Ngaysinh)</td>
                            <td>@item.Gioitinh</td>
                            <td>@item.Sdt</td>
                            <td>@item.Diachi</td>
                            <td>
                                <a href="/nhacungcap/edit/@item.MaNv" class="btn btn-sm btn-info"><i class="fa fa-pen-to-square"></i></a>
                                <a href="/nhacungcap/delete/@item.MaNv" class="btn btn-sm btn-danger btnDelete"><i class="fa fa-trash-can"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <h4>Chưa có thông tin nhân viên nào </h4>
        }
    </div>
</div>


