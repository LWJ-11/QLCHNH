@model CuaHang
@{
    ViewData["Title"] = "Thêm cửa hàng";
}

<div class="card">
    <div class="card-header"><strong>Thêm cửa hàng</strong></div>
    <div class="card-body card-block">
        <form action="/cuahang/create" method="post" asp-antiforgery="true">
            <div class="form-group">
                <label for="TenCh" class=" form-control-label">Tên cửa hàng</label>
                <input type="text" name="TenCh" class="form-control">
                <span asp-validation-for="TenCh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Sdt" class=" form-control-label">Số điện thoại</label>
                <input type="text" name="Sdt" class="form-control">
                <span asp-validation-for="Sdt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Diachi" class=" form-control-label">Địa chỉ</label>
                <input type="text" name="Diachi" class="form-control">
            </div>
            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <select asp-for="MaQl" class="form-control"
                                asp-items="@ViewBag.QuanLy">
                            <option>Please select one</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <a href="/nhacungcap" class="btn btn-outline-primary mt-4"><i class="fa fa-arrow-left"></i> &nbsp; Trở về</a>
                <input type="submit" name="submit" class="btn btn-info mt-4" value="Thêm" />
            </div>
        </form>
    </div>
</div>