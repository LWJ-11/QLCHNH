@model List<ThePerfumeShop.Models.KhachHang>

@{
    ViewData["Title"] = "Danh sách khách hàng";
}
<div class="card">
    <div class="card-header">
        <strong class="card-title">Danh sách khách hàng</strong>
        <a type="button" href="/khachhang/create" class="card-title btn btn-info float-right">Thêm khách hàng</a>
    </div>
    <div class="card-body">
        @if (Model != null)
        {
            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Họ tên</th>
                    <th>Ngày Sinh</th>
                    <th>Giới tính</th>
                    <th>Số điện thoại</th>
                    <th>Địa chỉ</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MaKh</td>
                            <td>@item.TenKh</td>
                            <td>@String.Format("{0:MM/dd/yyyy}",item.Ngaysinh)</td>
                            <td>@item.Gioitinh</td>
                            <td>@item.Sdt</td>
                            <td>@item.Diachi</td>
                            <td>
                                <a href="/khachhang/edit/@item.MaKh" class="btn btn-sm btn-info"><i class="fa fa-pen-to-square"></i></a>
                            </td>
                        </tr>
                    }
            </tbody>
        </table>
        }
        else
        {
            <h4>Chưa có bản ghi nào</h4>
        }
    </div>
</div>


