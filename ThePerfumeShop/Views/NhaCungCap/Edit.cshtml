@model IEnumerable<ThePerfumeShop.Models.NhaCungCap>

@{
    ViewData["Title"] = "Cập nhật nhà cung cấp";
}
<div class="card">
    <div class="card-header"><strong>Cập nhật thông tin nhà cung cấp</strong></div>
    <div class="card-body card-block">
        <form action="/nhacungcap/edit/@Model.FirstOrDefault().MaNcc" method="post" asp-antiforgery="true">
            <input type="hidden" name="MaNcc" class="form-control" value="@Model.FirstOrDefault().MaNcc">
            <div class="form-group">
                <label for="TenNcc" class=" form-control-label">Tên nhà cung cấp</label>
                <input type="text" name="TenNcc" class="form-control" value="@Model.FirstOrDefault().TenNcc">
                <span asp-validation-for="@Model.FirstOrDefault().TenNcc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Sdt" class=" form-control-label">Số điện thoại</label>
                <input type="text" name="Sdt" class="form-control" value="@Model.FirstOrDefault().Sdt">
                <span asp-validation-for="@Model.FirstOrDefault().Sdt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Diachi" class=" form-control-label">Địa chỉ</label>
                <input type="text" name="Diachi" class="form-control" value="@Model.FirstOrDefault().Diachi">
            </div>
            <div class="form-group">
                <input type="submit" name="submit" class="btn btn-info mt-4" value="Cập nhật" />
            </div>
        </form>
    </div>
</div>