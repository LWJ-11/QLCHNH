@model List<ThePerfumeShop.Models.DataView.DanhSachKho>

@{
    ViewData["Title"] = "Danh sách nhà cung cấp";
}

<div class="card">
    <div class="card-header"><strong>Thêm nhà cung cấp</strong></div>
    <div class="card-body card-block">
        <form action="/nhacungcap/create" method="post" asp-antiforgery="true">
         <div class="form-group">
            <label for="TenNcc" class=" form-control-label">Tên nhà cung cấp</label>
            <input type="text" name="TenNcc" class="form-control">       
         </div>
         <div class="form-group">
            <label for="Sdt" class=" form-control-label">Số điện thoại</label>
            <input type="text" name="Sdt" class="form-control">   
         </div>
         <div class="form-group">
             <label for="Diachi" class=" form-control-label">Địa chỉ</label>
             <input type="text" name="Diachi" class="form-control">
         </div>
         <div class="form-group">
             <input type="submit" name="submit" class="btn btn-info mt-4" value="Thêm" />
         </div>  
    </form>
    </div>
</div>